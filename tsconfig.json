{
  // use the base options generated by svelte-kit after the 1st time running "dev"
  "extends": "./.svelte-kit/tsconfig.json",

  "compilerOptions": {
    // good option in general; enables tRPC to type-check correctly
    "strict": true,

    // define paths starting from the root of this monorepo
    "baseUrl": ".",

    // allow importing the default export from jspreadsheet during onMount
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "noEmit": true,

    // path aliases for TypeScript
    "paths": {
      // Svelte components
      "$components/*": ["src/components/*"],

      // Markdown for static pages
      "$markdown/*": ["src/markdown/*"],

      // needed for Sveltekit; used for utilities
      "$lib": ["src/lib", "src/lib"],
      "$lib/*": ["src/lib/*", "src/lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
